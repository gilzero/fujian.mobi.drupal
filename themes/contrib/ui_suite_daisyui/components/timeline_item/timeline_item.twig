{% set start_attributes = attributes.addClass('timeline-start') %}

{% if timeline_box_start %}
    {% set start_attributes = start_attributes.addClass('timeline-box') %}
{% endif %}

{% set end_attributes = create_attribute().addClass('timeline-end') %}

{% if timeline_box_end %}
    {% set end_attributes = end_attributes.addClass('timeline-box') %}
{% endif %}

{% if timeline_start %}
<div{{ start_attributes }}>{{ timeline_start }}</div>
{% endif %}
